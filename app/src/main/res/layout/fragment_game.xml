<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/clickForMoneyBnt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/totalTimeUsrText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/main_btn"
            android:text="@string/mainBtn"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/userAmountMoney"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/localTimeHold"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Рублей :"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/clickForMoneyBnt"
            android:layout_below="@+id/clickForMoneyBnt"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/localTimeHold"
            android:layout_width="144dp"
            android:layout_height="20dp"
            android:layout_below="@+id/clickForMoneyBnt"
            android:layout_toStartOf="@+id/chronometer"
            android:text="Вы держали кнопку :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalTimeUsrText"
            android:layout_width="125dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="За всё время вы держали кнопку"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalTimeValue"
            android:layout_width="58dp"
            android:layout_height="41dp"
            android:layout_above="@+id/clickForMoneyBnt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="136dp"
            android:gravity="center_horizontal|center"
            android:text=""
            android:textColor="@color/white" />

    </RelativeLayout>

</FrameLayout>